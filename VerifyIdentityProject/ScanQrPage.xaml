<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VerifyIdentityProject.ScanQrPage"
             Title="Scan QR code"
             xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls">

    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Frame >
            <VerticalStackLayout Spacing="10" Padding="10">
                <Label Text="1.Scan QR code" FontSize="18" FontAttributes="Bold" TextColor="{DynamicResource SecondaryTextColor}" />
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="15" Padding="5">
                    <Button Text="Start QR scan" Clicked="OnStartScanningClicked" />
                    <Button Text="Stop QR scan" Clicked="CancelScanning" IsEnabled="False" x:Name="cancelButton"/>
                </HorizontalStackLayout>

                <zxing:CameraBarcodeReaderView  
                            x:Name="barcodeReader"
                            IsDetecting="True"
                            IsVisible="True"
                            BarcodesDetected="barcodeReader_BarcodesDetected"   
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand"
                            HeightRequest="400"
                        />
            </VerticalStackLayout>
        </Frame>
        
    </VerticalStackLayout>
</ContentPage>